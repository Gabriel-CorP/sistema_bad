      <th>SubTotal</th>
    </tr>
  </thead>
  <tbody>
    <% @lineas.each do |linea| %>
      <tr>
          <td>
            <strong><%=  linea.producto_id %></strong>
          </td>
          <td>
            <p class="cantidad"><%=  linea.cantidad %></p>
          </td>
          <td>
            
          </td>

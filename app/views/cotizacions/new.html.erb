</table>
<div class="card mt-s">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="text text-secondary">Nueva Cotizacion</h3>
  

</div>

<div class="container ">


  <div class="card-body ">
    <%= form_for @cotizacion do |form| %>
      <% if @cotizacion.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(cotizacion.errors.count, "error") %> prohibited this cotizacion from being saved:</h2>
    
          <ul>
            <% cotizacion.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      
      
      <div class="form-group row"> 
        <%= form.label :proveedor, class:'col-sm-2', style: "display: block", display: "false"  %>
        <input class="form-control" value="<%= @provee[0].id %>" autocomplete="off" type="hidden" name="cotizacion[estado]" id="cotizacion_estado" />
        
        <div class="col-sm-4">
         
        </div>
        
      </div>
    
      <div class="form-group row">
        <%= form.label :descuento_efectivo ,class:'col-sm-2', style: "display: block" %>
        <div class="col-sm-4">
          <%= form.number_field :descuento_efectivo , class:'form-control', step:"0.01" %>
        </div>
        
      </div>
    
      <div class="form-group row">
        <%= form.label :descuento_pronto_pago,class:'col-sm-2', style: "display: block" %>
        <div class="col-sm-4">
          <%= form.number_field :descuento_pronto_pago, class:'form-control', step:"0.01" %>
        </div>
        
      </div>
    
      <div class="form-group row">
        <%= form.label :descuento_volumen,class:'col-sm-2', style: "display: block" %>
        <div class="col-sm-4">
          <%= form.number_field :descuento_volumen, class:'form-control', step:"0.01" %>
        </div>
        
      </div>
    
      <div class="form-group row">
        <%= form.label :descuento_forma_pago,class:'col-sm-2', style: "display: block" %>
          <div class="col-sm-4">
          <%= form.number_field :descuento_forma_pago, class:'form-control', step:"0.01" %>
        </div>
          
      </div>
    
      <div class="form-group row">
        <%= form.label :envases_embalage,class:'col-sm-2', style: "display: block" %>
          <div class="col-sm-4">
          <%= form.number_field :envases_embalage, class:'form-control', step:"0.01" %>
        </div>
        
      </div>
    
      <div class="form-group row">
        <%= form.label :pago_transporte,class:'col-sm-2', style: "display: block" %>
          <div class="col-sm-4">
          <%= form.number_field :pago_transporte, class:'form-control', step:"0.01"  %>
        </div>
        
      </div>
    
      <div class="form-group row">
        <%= form.label :recargo_aplazamiento,class:'col-sm-2', style: "display: block" %>
        <div class="col-sm-4">
          <%= form.number_field :recargo_aplazamiento, class:'form-control' , step:"0.01"  %>
        </div>
        
      </div>
    
      <div class="form-group row">
      
          <div class="col-sm-4">
          <%= form.hidden_field :estado, class:'form-control', value: 'Pendiente' %>
        </div>
        
      </div>
    
      <div class="form-group row">
        <%= form.label :total,class:'col-sm-2', style: "display: block", step:"0.01"  %>
        <div class="col-sm-4">
          <%= form.number_field :total, class:'form-control' %>
        </div>
        
      </div>
    
      <div class="form-group row">
        <%= form.label :fecha_entrega,class:'col-sm-2', style: "display: block" %>
        <div class="col-sm-4">
          <%= form.date_field :fecha_entrega, class:'form-control' %>
        </div>
        
      </div>
        <div class="btn-toolbar" role="toolbar">
              <div class="btn-group" role="group">
              
              <input type="button" name="button" class='btn btn-primary' onclick="calcular('valor','cantidad','subtotal')">
              <span>Calcular Total</span>
              </input>
                          
              </div>
        </div>
   <input type="submit" name="commit" onclick="return false" value="Create Cotizacion" data-disable-with="Create Cotizacion" visibility="hide" disabled id="guardar"/>
     

    <% end %>
  </div>
 <script src='http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.js'></script>
 <script type = "text/javascript">
         function calcular(valor,cant,sub){
           document.getElementById("guardar").disabled=false;
          var txtPrecio=document.getElementsByClassName(valor);
          var txtCantidad=document.getElementsByClassName(cant);
          var lblSubtotal=document.getElementsByClassName(sub);
          console.log(txtCantidad[0].innerHTML);
          console.log(txtPrecio[0].value);
          console.log(lblSubtotal.length);
          
          for(var i=0; txtCantidad.length;i++){
            var precio=Number(txtPrecio[i].value);
            var cantidad=Number(txtCantidad[i].innerHTML);
            var res=precio*cantidad;
            lblSubtotal[i].value=res;
            console.log(precio*cantidad);
          }

          }
</script>



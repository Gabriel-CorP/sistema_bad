<p style="color: green"><%= notice %></p>
<div class="card-header d-flex justify-content-between align-items-center">
  <h1>Ubicaciones</h1>
  <%if can? :create, Ubicacion %>
  <%= link_to "Nueva ubicacion" , new_ubicacion_path,  class:"btn btn-primary btn-sm  " %>
  <%end%>
</div>
<br>




<table id="ubicacionesTable" class="table table-striped table-responsive table-bordered">
  <thead>
    <tr>
      <th>Nombre de ubicacion </th>
      <th>Proveedor</th>
      <th>Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @ubicacions.each do |ubicacion| %>
      <tr>
          <td>
            <strong><%=  ubicacion.nombre %></strong>
          </td>
          <td>
            <strong><%=  buscarNombreProveedor(ubicacion.proveedor_id) %></strong>
          </td>
          <td>
            <div class="btn-toolbar" role="toolbar">
              <div class="btn-group" role="group">
                <%= button_to image_tag("ojo",width:25,height:25), ubicacion,method: :get, :class=>"btn " ,id:"btn-ver" , :title=>"Ver" %>
                <%if can? :update, Ubicacion %>
                <%= button_to image_tag("editar"), edit_ubicacion_path(ubicacion),:method=>:get, :class=>"btn " ,id:"btn-edit" ,:title=>"Editar"%>
                <%end%>
                <%if can? :destroy, Ubicacion %>
                <%= button_to image_tag("trash"), ubicacion, method: :delete ,:class=>"btn " ,id:"btn-ver" ,:title=>"Eliminar" %>
                <%end%>
              </div>
            </div>
          </td>

        
      </tr>
    <%end %>
      
  </tbody>
</table>


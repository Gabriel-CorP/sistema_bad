<div class="container ">
  <div class="card-body shadow-lg">
    <%= form_with(model: ubicacion) do |form| %>
      <div class="form-group row mb-3">
        <% if ubicacion.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(ubicacion.errors.count, "error") %> prohibited this ubicacion from being saved:</h2>

            <ul>
              <% ubicacion.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <div class="form-group row mb-3">
        <%= form.label 'Nombre de ubicacion:', class:'col-sm-2 ' %>
        <div class="col-sm-4">
          <%= form.text_field :nombre ,id:"compania" ,class:"form-control" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= form.label 'Direccion de ubicacion:', class:'col-sm-2 ' %>
        <div class="col-sm-4">
          <%= form.text_field :direccion ,id:"compania" ,class:"form-control" %>
        </div>
      </div>


      <div class="form-group row mb-3">
      <%= form.label 'Proveedor:', class:'col-sm-2 ' %>
      <div class="col-sm-4">
        <%= form.collection_select :proveedor_id,@proveedors,"id","compania",:selected => :id ,class:'form-select'   %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= form.label :local,class:'col-sm-2', style: "display: block" %>
      <div class="col-sm-4">
        <%= form.file_field :local, class:'form-control'  %>
        <p></p>
      </div>
      <div class="col-sm-4">
      Imagen del local anterior
      <%= image_tag ubicacion.local,:size => "260x180" %>  
      </div>
    </div>

    <div class="form-group row mb-3">
      <%= form.label :mapa,class:'col-sm-2', style: "display: block" %>
      <div class="col-sm-4">
        <%= form.file_field :mapa, class:'form-control'  %>
        <p></p>
      </div>
      <div class="col-sm-4">
      Imagen del mapa anterior
      <%= image_tag ubicacion.mapa,:size => "260x180" %>  
      </div>
    </div>

    
    <button type="submit" name="button" class='btn btn-primary'>
      <span>Guardar</span>
    </button>

    <%= yield(:boton) %>
    <% end %>
</div>

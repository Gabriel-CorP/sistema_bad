
<div class="container ">

  <div class="card-body shadow-lg">
    <%= form_with(model: cargo) do |form| %>
      <div class="form-group row mb-3">
        <% if cargo.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(cargo.errors.count, "error") %> prohibited this cargo from being saved:</h2>

          <ul>
            <% cargo.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
      </div>

      <div class="form-group row mb-3">
        <%= form.label 'Nombre del cargo:', class:'col-sm-2 ' %>
        <div class="col-sm-4">
          <%= form.text_field :nombre , class:'form-control'   %>
        </div>
      </div>
      
      <button type="submit" name="button" class='btn btn-primary btn-sm'>
        <span>Guardar</span>
      </button>
  
      <%= yield(:boton) %>
  
    <% end %> 
  </div>

</div>
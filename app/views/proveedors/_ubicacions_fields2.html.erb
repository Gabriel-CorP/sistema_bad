<fieldset>
         <div class="card-header " >
         Sucursal
         </div>
             
         <div class="card-body">
             <div class="form-group row mb-3">

                 <%= builder.label :"nombre de la sucursal" ,class:'col-sm-2', style: "display: block"%>
                 <div class="col-sm-4">
                     <%= builder.text_field :nombre ,class:'form-control' %>
                 </div>
             </div>

             <div class="form-group row mb-3">
                 <%= builder.label :"direccion de la sucursal",class:'col-sm-2' , style: "display: block"%>
                 <div class="col-sm-4">
                     <%= builder.text_field :direccion , class:'form-control'%>
                 </div>
            </div>
            

            <div class="form-group row mb-3">
                    <%= builder.label :local,class:'col-sm-2', style: "display: block" %>
                    <div class="col-sm-4">
                        <%= builder.file_field :local, class:'form-control' %>
                    </div>

            </div>
            <div class="form-group row mb-3">
                    <%= builder.label :mapa,class:'col-sm-2', style: "display: block" %>
                    <div class="col-sm-4">
                        <%= builder.file_field :mapa, class:'form-control' %>
                    </div>

            </div>
            
            
                

                
        </div>
                
        

</fieldset>